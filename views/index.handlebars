<div class="container">

    <div class="jumbotron">
        <h1>Burgers on the Go</h1>
        <p>Select the burger you want to make and then eat it!</p>
        <h2>Ready to order?</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="newburger">Burger Choice</label>
                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">
                    <i class="far fa-thumbs-up"></i>
                </button>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Burgers Ordered, Click the check to Devour</strong></div>
                <div class="panel-body">  
                    <ul class="mt-3">
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" 
                        data-newDevoured={{devour}} alt="Eat Me"><i class="far fa-check-circle"></i></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">  
                    <ul class="mt-3">
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="burgerdelete btn btn-danger" id="deletebutton" data-id="{{this.id}}" 
                        data-newDevoured={{devour}}><i class="fas fa-times"></i></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>